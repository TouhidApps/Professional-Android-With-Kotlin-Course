<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:background="@drawable/header_gradient">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="2dp"
                android:adjustViewBounds="true"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/baseline_supervised_user_circle_24" />

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="#FF0000"
                android:layout_width="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                app:strokeWidth="3dp"
                app:cardCornerRadius="12.5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="25dp" />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="Md Touhidul Islam"
                    android:textColor="#fff"
                    android:drawablePadding="8dp"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"/>
                
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="25dp"
                    app:srcCompat="@drawable/baseline_supervised_user_circle_24"
                    android:layout_height="25dp"/>
                
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="25dp"
                    android:rotation="90"
                    android:tint="#fff"
                    app:srcCompat="@drawable/baseline_linear_scale_24"
                    android:layout_height="25dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:text="Bangladesh"
                    android:textColor="#fff"
                    android:drawablePadding="8dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="#F5F5F5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                app:srcCompat="@drawable/baseline_supervised_user_circle_24"
                android:layout_height="50dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:text="CALL US"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FF0000"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:tint="#fff"
                app:srcCompat="@drawable/baseline_supervised_user_circle_24"
                android:layout_height="50dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:text="MAIL US"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:padding="5dp"
            app:srcCompat="@drawable/baseline_location_on_24"
            android:layout_height="50dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:text="Location"
            android:textColor="#C8C8C8"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:background="#F5F5F5"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:padding="5dp"
            app:srcCompat="@drawable/baseline_location_on_24"
            android:layout_height="50dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:text="Resturants"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:background="#F5F5F5"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:padding="5dp"
            app:srcCompat="@drawable/baseline_location_on_24"
            android:layout_height="50dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:text="Deals"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/dotted_bg"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:background="#F5F5F5"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:padding="5dp"
            app:srcCompat="@drawable/baseline_supervised_user_circle_24"
            android:layout_height="50dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:text="Sign Out"
        android:drawableTint="#fff"
        android:layout_gravity="end"
        app:backgroundTint="#FF0000"
        android:drawableEnd="@drawable/baseline_exit_to_app_24"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>